<% include ../partials/header %>

<!-- ////////////////////////////////////////////////////////////////////////////////// -->


<div class="container">
	<header class="jumbotron">
		<div class="container">
			<h1>Welcome to Node Library!</h1>
			<p>This section contains the list of our librarians</p>
			<p>
				<a class="btn btn-primary btn-lg" href="/librarians/new">Add a new Librarian!!</a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display: flex; flex-wrap: wrap;">
		<%librarians.forEach(function (librarian) {%>
		<div class="col-md-3 col-sm-6">
			<div class="thumbnail">
				<div class="caption">
					<strong><%=librarian.name%></strong>
				</div>
				<div class="caption">
					<em>by <%=librarian.username%></em>
				</div>
				<p>
					<a href="/librarians/<%=librarian._id%>" class="btn btn-primary">More info</a>
				</p>
			</div>
		</div>
	<%})%>
	</div>
</div>

<% include ../partials/footer %>